---
import Layout from '../layouts/Layout.astro';

// @ts-ignore
const { cookies, redirect } = Astro;

const accessToken = cookies.get('sb-access-token');
const refreshToken = cookies.get('sb-refresh-token');

if (accessToken || refreshToken) {
	return redirect('/dashboard');
}
---

<Layout title='Tag'>
	<form
		action='/api/auth/register'
		method='post'
		class='m-auto max-w-md h-[70%] flex justify-center items-center flex-col gap-6'
	>
		<h3 class='text-3xl'>Welcome to Tag</h3>
		<button
			class='rounded-md text-lg text-white p-2 font-semibold bg-[#5865F2] h-fit'
			>Sign Up with Discord
		</button>
	</form>
</Layout>

<style is:global>
	html,
	body {
		height: 100%;
	}
</style>
